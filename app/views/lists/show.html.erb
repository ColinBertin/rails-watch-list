<div class="container mt-5">
  <div class="d-flex flex-column mb-5 align-center">
    <h1 class="text-center mb-3"><%= @list.name %> list of movies</h1>
    <div class="text-center">
      <%= link_to 'Add bookmark', new_list_bookmark_path(@list), class: 'btn btn-success'%>
    </div>
  </div>
  <div class="cards mb-5">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-trip text-dark" style="position: relative">
        <img src="<%= bookmark.movie.poster_url %>" />
        <div class="card-trip-infos">
          <div>
            <h2><%= bookmark.movie.title %> - <span style="font-weight: 300"><%= bookmark.movie.rating.to_f %></span> <i class="fas fa-star text-warning"></i></h2>
            <p><%= bookmark.comment %></p>
          </div>
        </div>
        <%= link_to bookmark_path(bookmark),
          method: :delete,
          data: { confirm: "Are you sure you want to delete this bookmark?" },
          style: "position: absolute; bottom: 6px; right: 10px; color: red;" do %>
          <i class="fas fa-times"></i>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= link_to lists_path, class: "text-info" do%>
    <p><i class="fas fa-undo-alt"></i> Back to list</p>
  <% end %>
</div>
